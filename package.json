{
  "name": "tower-defense-gpt",
  "private": true,
  "type": "module",
  "version": "1.0.3",
  "main": "electron/main.cjs",
  "scripts": {
    "start": "node scripts/start.mjs",
    "start:open": "node scripts/start.mjs --open",
    "electron:dev": "electron .",
    "electron:build": "electron-builder --publish never",
    "release": "electron-builder --publish always"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "playwright": "^1.58.2"
  },
  "build": {
    "appId": "com.towerdefensegpt.app",
    "productName": "TowerDefenseGPT",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**",
      "index.html",
      "style.css",
      "favicon.ico",
      "src/**",
      "package.json"
    ],
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "artifactName": "${productName}-${version}-mac-unsigned-${arch}.${ext}",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "artifactName": "${productName}-${version}-win-unsigned-${arch}.${ext}",
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
